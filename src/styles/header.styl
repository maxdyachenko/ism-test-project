.main-header
	.orange-line
		width 100%
		height 25px
		background COLOR_BRAND_ORANGE
	.fluid-img img {
		width 100%
	}
	.menu
		padding 20px 0
	.logo
		img
			display block
	.custom-list
		li
			display inline-block
			padding 6px 10px
			transition .3s
			color COLOR_BRAND_DARK_BROWN
			&:not(:last-of-type)
				margin-right 10px
			&.active, &:hover
				border-radius 6px
				color COLOR_BRAND_WHITE
				background COLOR_BRAND_ORANGE
			a
				display block
				font 400 18px / 1.2 Arial
				letter-spacing .2px
				text-transform uppercase
