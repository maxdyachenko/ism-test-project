.main-header
	.orange-line
		width 100%
		height 25px
		background COLOR_BRAND_ORANGE
	.fluid-img img
		width 100%
		height 100%
	.menu
		display flex
		padding 20px 0
	.logo
		margin-right 80px
		img
			display block
	.custom-list
		li
			display inline-block
			padding 6px 8px
			transition .3s
			color COLOR_BRAND_DARK_BROWN
			&.active, &:hover
				border-radius 6px
				color COLOR_BRAND_WHITE
				background COLOR_BRAND_ORANGE
			a
				display block
				font 400 18px / 1.2 Arial
				letter-spacing .2px
				text-transform uppercase
