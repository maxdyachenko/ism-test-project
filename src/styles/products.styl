.products
	h1
		color COLOR_BRAND_LIGHT_BROWN4
	.image-block
		img
			border 1px solid COLOR_BRAND_DARK_WHITE
	.main-desc
		margin-top 14px
		text-transform uppercase
		color COLOR_BRAND_DARK_BLACK
	.under-desc
		color COLOR_BRAND_LIGHT_BROWN2
	.main-desc, .under-desc
		font 400 12px / 1.8 Arial
	.wrapper
		display flex
		justify-content space-between
		flex-wrap wrap
	.product
		padding 10px 0
	.price
		display inline-block
		margin-top 10px
		padding 6px 4px
		border-radius 5px
		background COLOR_BRAND_LIGHT_ORANGE
		p
			color COLOR_BRAND_WHITE
			font 400 20px / 1.2 'Lobster13'
	.dots-wrapper
		display flex
		justify-content space-between