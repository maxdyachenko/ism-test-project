.feed
	margin-bottom 3.5rem
	h2
		color COLOR_BRAND_LIGHT_BROWN3
	.icons
		margin-bottom 2.5rem
	.icon
		display inline-block
		width 26px
		height @width
		margin-right 8px
	.bottom-menu
		li
			display inline-block
			margin-right 10px
			text-transform uppercase
			color COLOR_BRAND_LIGHT_BLACK
			font 400 12px / 1.2 Arial
	label
		font 400 12px / 1.2 Arial
		color COLOR_BRAND_BLACK
	form div
		display flex
		margin-top 2rem
	.orange-button
		text-transform none
		font 400 13px / 1.2 Arial
	input
		margin-right 10px
		padding 8px 10px
		border 1px solid COLOR_BRAND_LIGHT_GREY3

@media (max-width: 600px)
	.col:nth-of-type(2)
		margin-top 2rem